<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/main_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/base"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <include layout="@layout/toolbar" android:id="@+id/main_toolbar"/>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scroll"
        android:layout_below="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TableLayout
            android:layout_below="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:stretchColumns="*"
            android:shrinkColumns="1"
            android:layout_gravity="center_horizontal">


            <TableRow>

                <TextView
                    android:layout_span="2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:textSize="20dp"
                    android:text="Compute from App Usage"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textAlignment="center"
                    android:id="@+id/lbldevice"
                    android:layout_weight="1"/>


            </TableRow>

            <TableRow>
                <View style="@style/Divider"
                    android:layout_marginTop="10dp"
                    android:layout_span="2" />
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:text="Extraversion"
                    android:id="@+id/lblextraversion"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textAlignment="center"
                    android:layout_column="0" />
                <com.akexorcist.roundcornerprogressbar.TextRoundCornerProgressBar
                    android:id="@+id/dExtraversion"
                    android:layout_marginTop="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_height="30dp"
                    android:layout_width="120dp"
                    app:rcBackgroundPadding="5dp" />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Agreeableness"
                    android:id="@+id/lblAgreeableness"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textAlignment="center"
                    android:layout_column="0" />
                <com.akexorcist.roundcornerprogressbar.TextRoundCornerProgressBar
                    android:id="@+id/dAgreeableness"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_height="30dp"
                    android:layout_width="120dp"
                    app:rcBackgroundPadding="5dp" />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Conscientiousness"
                    android:id="@+id/lblconscientiousness"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textAlignment="center"
                    android:layout_column="0" />
                <com.akexorcist.roundcornerprogressbar.TextRoundCornerProgressBar
                    android:id="@+id/dConscientiousness"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_height="30dp"
                    android:layout_width="120dp"
                    app:rcBackgroundPadding="5dp" />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Neuroticism"
                    android:id="@+id/lblneuroticism"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textAlignment="center"
                    android:layout_column="0" />
                <com.akexorcist.roundcornerprogressbar.TextRoundCornerProgressBar
                    android:id="@+id/dNeuroticism"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_height="30dp"
                    android:layout_width="120dp"
                    app:rcBackgroundPadding="5dp" />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Openness"
                    android:id="@+id/lblopenness"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textAlignment="center"
                    android:layout_column="0" />
                <com.akexorcist.roundcornerprogressbar.TextRoundCornerProgressBar
                    android:id="@+id/dOpenness"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_height="30dp"
                    android:layout_width="120dp"
                    app:rcBackgroundPadding="5dp" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_span="2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:textSize="20dp"
                    android:text="Compute from Big Five Quiz"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textAlignment="center"
                    android:id="@+id/lblQuiz"
                    android:layout_weight="1"/>


            </TableRow>

            <TableRow>
                <View style="@style/Divider"
                    android:layout_marginTop="10dp"
                    android:layout_span="2" />
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Extraversion"
                    android:layout_marginTop="10dp"
                    android:id="@+id/lblqextraversion"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textAlignment="center"
                    android:layout_column="0" />

                <com.akexorcist.roundcornerprogressbar.TextRoundCornerProgressBar
                    android:id="@+id/qExtraversion"
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    app:rcBackgroundPadding="5dp" />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Agreeableness"
                    android:id="@+id/lblqAgreeableness"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textAlignment="center"
                    android:layout_column="0" />
                <com.akexorcist.roundcornerprogressbar.TextRoundCornerProgressBar
                    android:id="@+id/qAgreeableness"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_height="30dp"
                    android:layout_width="120dp"
                    app:rcBackgroundPadding="5dp" />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Conscientiousness"
                    android:id="@+id/lblqconscientiousness"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textAlignment="center"
                    android:layout_column="0" />
                <com.akexorcist.roundcornerprogressbar.TextRoundCornerProgressBar
                    android:id="@+id/qConscientiousness"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_height="30dp"
                    android:layout_width="120dp"
                    app:rcBackgroundPadding="5dp" />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Neuroticism"
                    android:id="@+id/lblqneuroticism"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textAlignment="center"
                    android:layout_column="0" />
                <com.akexorcist.roundcornerprogressbar.TextRoundCornerProgressBar
                    android:id="@+id/qNeuroticism"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_height="30dp"
                    android:layout_width="120dp"
                    app:rcBackgroundPadding="5dp" />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Openness"
                    android:id="@+id/lblqopenness"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textAlignment="center"
                    android:layout_column="0" />
                <com.akexorcist.roundcornerprogressbar.TextRoundCornerProgressBar
                    android:id="@+id/qOpenness"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_height="30dp"
                    android:layout_width="120dp"
                    app:rcBackgroundPadding="5dp" />
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_span="2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textAlignment="center"
                    android:id="@+id/txtHighestScore"
                    android:layout_weight="1"/>
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Most Used Application : "
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textAlignment="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/lblmapp"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textAlignment="center"
                    />


            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Most Used Category: "
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:maxLines="2"
                    android:textColor="#000000"
                    android:textAlignment="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/lblmcapp"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:maxLines="2"
                    android:textColor="#000000"
                    android:textAlignment="center"
                    />
            </TableRow>

            <TableRow
                android:paddingTop="20dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textAlignment="center"
                    android:text="Click button to copy text\n(to be pasted in survey)"/>

                <Button
                    android:id="@+id/copybutton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Copy Result" />


            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textAlignment="center"
                    android:text="Survey :  "/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textAlignment="center"
                    android:maxLines="2"
                    android:autoLink="web"
                    android:text="@string/survey_link"
                    android:id="@+id/txtlink"/>
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_span="2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:textSize="20dp"
                    android:text="Know more about the Dimensions"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textAlignment="center"
                    android:id="@+id/lblinfo"
                    android:layout_weight="1"/>


            </TableRow>
            <TableRow>
                <View style="@style/Divider"
                    android:layout_marginTop="10dp"
                    android:layout_span="2" />
            </TableRow>
            <TableRow>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/AttrOneSummary"
                    android:layout_marginTop="20dp"
                    android:layout_span="2"
                    android:padding="10dp"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    />
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/AttrTwoSummary"
                    android:layout_marginTop="20dp"
                    android:layout_span="2"
                    android:textSize="15dp"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    />
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/AttrThreeSummary"
                    android:layout_marginTop="20dp"
                    android:layout_span="2"
                    android:textSize="15dp"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    />
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/AttrFourSummary"
                    android:layout_marginTop="20dp"
                    android:layout_span="2"
                    android:textSize="15dp"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    />
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/AttrFiveSummary"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="50dp"
                    android:layout_span="2"
                    android:textSize="15dp"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    />
            </TableRow>

        </TableLayout>
    </ScrollView>
</RelativeLayout>